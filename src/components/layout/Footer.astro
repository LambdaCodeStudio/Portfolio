---
// src/components/layout/Footer.astro
import { Github, Linkedin, Mail, Twitter } from 'lucide-react';
const currentYear = new Date().getFullYear();
---

<footer class="bg-black mt-20 relative">
  <div class="absolute inset-0 bg-gradient-to-t from-violet-900/20 to-transparent"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 relative">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
      <div>
        <h3 class="text-xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-violet-500 to-fuchsia-500 mb-4">
          LambdaCodeStudio
        </h3>
        <p class="text-gray-400">
          Desarrollando experiencias digitales únicas y memorables.
        </p>
      </div>
      
      <div>
        <h4 class="text-white font-semibold mb-4">Enlaces</h4>
        <ul class="space-y-2">
          <li>
            <a href="/proyectos" class="text-gray-400 hover:text-violet-400 transition-colors duration-300">Proyectos</a>
          </li>
          <li>
            <a href="/sobre-mi" class="text-gray-400 hover:text-violet-400 transition-colors duration-300">Sobre Mí</a>
          </li>
          <li>
            <a href="/contacto" class="text-gray-400 hover:text-violet-400 transition-colors duration-300">Contacto</a>
          </li>
        </ul>
      </div>
      
      <div>
        <h4 class="text-white font-semibold mb-4">Redes Sociales</h4>
        <div class="flex gap-4">
          <a href="#" class="text-gray-400 hover:text-violet-400 transition-colors duration-300">
            <Github className="w-6 h-6" />
          </a>
          <a href="#" class="text-gray-400 hover:text-violet-400 transition-colors duration-300">
            <Linkedin className="w-6 h-6" />
          </a>
          <a href="#" class="text-gray-400 hover:text-violet-400 transition-colors duration-300">
            <Twitter className="w-6 h-6" />
          </a>
          <a href="#" class="text-gray-400 hover:text-violet-400 transition-colors duration-300">
            <Mail className="w-6 h-6" />
          </a>
        </div>
      </div>
    </div>
    
    <div class="border-t border-gray-800 pt-8">
      <p class="text-center text-gray-400">
        © {currentYear} LambdaCodeStudio. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>