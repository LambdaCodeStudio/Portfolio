---
import '../styles/global.css';
import ThemeToggle from '../components/react/ThemeToggle';
import SmoothScroll from '../components/react/SmoothScroll';
import CustomCursor from '../components/react/CustomCursor';
import AnimatedBackground from '../components/react/AnimatedBackground';

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = 'Lambda Code Studio - Desarrollo de software a medida. Creamos soluciones web completas y personalizadas.'
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- SEO Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
  </head>
  <body>
    <!-- Skip to content link for screen readers -->
    <a href="#main-content" class="skip-to-content">Saltar al contenido principal</a>
    <!-- Smooth Scroll -->
    <SmoothScroll client:load />

    <!-- Custom Cursor -->
    <CustomCursor client:load />

    <!-- Animated Background -->
    <AnimatedBackground client:load />

    <!-- Navigation -->
    <nav class="fixed top-0 left-0 right-0 z-50 bg-white/80 dark:bg-neutral-900/80 backdrop-blur-md border-b border-neutral-200 dark:border-neutral-700 transition-colors" role="navigation" aria-label="Navegación principal">
      <div class="container-custom">
        <div class="flex items-center justify-between h-16">
          <a href="/" class="text-xl font-bold text-neutral-900 dark:text-neutral-100 hover:text-primary-600 dark:hover:text-primary-400 transition-colors" aria-label="Lambda Code Studio - Inicio">
            Lambda Code Studio
          </a>

          <div class="hidden md:flex items-center gap-6" role="menubar">
            <a href="/#proyectos" class="text-sm font-medium text-neutral-600 dark:text-neutral-300 hover:text-neutral-900 dark:hover:text-neutral-100 transition-colors" role="menuitem">
              Proyectos
            </a>
            <a href="/#sobre-mi" class="text-sm font-medium text-neutral-600 dark:text-neutral-300 hover:text-neutral-900 dark:hover:text-neutral-100 transition-colors" role="menuitem">
              Sobre mí
            </a>
            <a href="/#contacto" class="text-sm font-medium text-neutral-600 dark:text-neutral-300 hover:text-neutral-900 dark:hover:text-neutral-100 transition-colors" role="menuitem">
              Contacto
            </a>
            <ThemeToggle client:load />
          </div>

          <!-- Mobile Menu Button & Theme Toggle -->
          <div class="md:hidden flex items-center gap-2">
            <ThemeToggle client:load />
            <button
              id="mobile-menu-button"
              class="p-2 text-neutral-600 dark:text-neutral-300 hover:text-neutral-900 dark:hover:text-neutral-100 transition-colors"
              aria-label="Abrir menú de navegación"
              aria-expanded="false"
              aria-controls="mobile-menu"
            >
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>

        <!-- Mobile Menu -->
        <div id="mobile-menu" class="hidden md:hidden pb-4" role="menu" aria-label="Menú de navegación móvil">
          <div class="flex flex-col gap-4">
            <a href="/#proyectos" class="text-sm font-medium text-neutral-600 dark:text-neutral-300 hover:text-neutral-900 dark:hover:text-neutral-100 transition-colors" role="menuitem">
              Proyectos
            </a>
            <a href="/#sobre-mi" class="text-sm font-medium text-neutral-600 dark:text-neutral-300 hover:text-neutral-900 dark:hover:text-neutral-100 transition-colors" role="menuitem">
              Sobre mí
            </a>
            <a href="/#contacto" class="text-sm font-medium text-neutral-600 dark:text-neutral-300 hover:text-neutral-900 dark:hover:text-neutral-100 transition-colors" role="menuitem">
              Contacto
            </a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main id="main-content" class="pt-16" role="main" aria-label="Contenido principal">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-neutral-900 dark:bg-neutral-950 text-neutral-400 dark:text-neutral-500 py-12 transition-colors" role="contentinfo" aria-label="Pie de página">
      <div class="container-custom">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
          <p class="text-sm">
            &copy; {new Date().getFullYear()} Lambda Code Studio. Todos los derechos reservados.
          </p>
          <div class="flex items-center gap-6">
            <a
              href="https://github.com/lambdacodestudio"
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-white dark:hover:text-neutral-200 transition-colors"
              aria-label="GitHub"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
              </svg>
            </a>
            <a
              href="https://wa.me/542216032737"
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-white dark:hover:text-neutral-200 transition-colors"
              aria-label="WhatsApp"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
              </svg>
            </a>
            <a
              href="mailto:lambdacodestudio@gmail.com"
              class="hover:text-white dark:hover:text-neutral-200 transition-colors"
              aria-label="Email"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </footer>

    <script>
      // Mobile menu toggle
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');

      mobileMenuButton?.addEventListener('click', () => {
        const isHidden = mobileMenu?.classList.toggle('hidden');
        mobileMenuButton.setAttribute('aria-expanded', isHidden ? 'false' : 'true');
        mobileMenuButton.setAttribute('aria-label', isHidden ? 'Abrir menú de navegación' : 'Cerrar menú de navegación');
      });

      // Close mobile menu when clicking on a link
      const mobileLinks = mobileMenu?.querySelectorAll('a');
      mobileLinks?.forEach(link => {
        link.addEventListener('click', () => {
          mobileMenu?.classList.add('hidden');
        });
      });

      // Smooth scroll with offset for fixed nav
      document.querySelectorAll('a[href^="#"], a[href^="/#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          const href = this.getAttribute('href') || '';
          const hash = href.startsWith('/#') ? href.substring(1) : href;

          // If we're on the home page, do smooth scroll
          if (window.location.pathname === '/' && hash.startsWith('#')) {
            e.preventDefault();
            const target = document.querySelector(hash);
            if (target) {
              target.scrollIntoView({
                behavior: 'smooth',
                block: 'start'
              });
            }
          }
          // If we're on another page, let the browser navigate normally
          // (will go to home page and then to the hash)
        });
      });
    </script>
  </body>
</html>
