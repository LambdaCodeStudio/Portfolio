---

<Layout title="Proyectos | LambdaCodeStudio">
  <!-- Hero Section -->
  <div class="relative min-h-[40vh] flex items-center justify-center bg-black">
    <div class="absolute inset-0 bg-gradient-to-b from-violet-900/20 to-transparent"></div>
    <div class="relative text-center px-4 sm:px-6 lg:px-8">
      <h1 class="text-5xl sm:text-6xl font-bold mb-6">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-violet-500 via-fuchsia-500 to-pink-500">
          Mis Proyectos
        </span>
      </h1>
      <p class="text-xl text-gray-400 mb-8 max-w-2xl mx-auto">
        Explora mi portfolio de proyectos en desarrollo web, mobile y dise√±o UI/UX
      </p>
      <ArrowDown className="w-8 h-8 mx-auto text-violet-400 animate-bounce" />
    </div>
  </div>

  <!-- Filtros -->
  <div class="bg-black py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-wrap justify-center gap-4">
        {categories.map((category) => (
          <button
            class="px-6 py-2 rounded-full bg-gray-900/50 text-gray-300 hover:text-white hover:bg-violet-500/20 border border-violet-500/20 transition-all duration-300"
          >
            {category}
          </button>
        ))}
      </div>
    </div>
  </div>

  <!-- Grid de Proyectos -->
  <div class="bg-black py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {allProjects.map((project) => (
          <div class="group relative bg-gray-900/30 backdrop-blur-xl rounded-xl overflow-hidden hover:scale-105 transition-all duration-500">
            <div class="relative">
              <img 
                src={project.image}
                alt={project.title}
                class="w-full h-64 object-cover filter brightness-75 group-hover:brightness-100 transition-all duration-500"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black to-transparent"></div>
            </div>
            
            <div class="p-8">
              <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-violet-400 transition-colors">
                {project.title}
              </h3>
              <p class="text-gray-400 mb-6">
                {project.description}
              </p>
              
              <div class="flex flex-wrap gap-2 mb-6">
                {project.tags.map((tag) => (
                  <span class={`px-3 py-1 rounded-full text-sm bg-gradient-to-r ${project.gradient} text-white`}>
                    {tag}
                  </span>
                ))}
              </div>

              <div class="flex justify-between items-center">
                <div class="flex gap-4">
                  <a href={project.github} class="text-gray-400 hover:text-violet-400 transition-colors">
                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                  </a>
                  <a href={project.link} class="text-gray-400 hover:text-violet-400 transition-colors">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                    </svg>
                  </a>
