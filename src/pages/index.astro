---
import MainLayout from '../layouts/MainLayout.astro';
import EnhancedHero from '../components/react/EnhancedHero';
import ScrollReveal from '../components/react/ScrollReveal';
import FeaturedProjects from '../components/astro/FeaturedProjects.astro';
import MinorProjects from '../components/astro/MinorProjects.astro';
import About from '../components/astro/About.astro';
import Contact from '../components/astro/Contact.astro';
---

<MainLayout
  title="Lambda Code Studio - Desarrollo de Software a Medida"
  description="Equipo de desarrolladores especializados en crear soluciones web completas. Proyectos como DistriLink, Odontocare, Luxury y Maestro Obras."
>
  <EnhancedHero client:load />

  <ScrollReveal client:load animation="slideUp">
    <FeaturedProjects />
  </ScrollReveal>

  <ScrollReveal client:load animation="slideUp" delay={0.2}>
    <MinorProjects />
  </ScrollReveal>

  <ScrollReveal client:load animation="slideUp" delay={0.2}>
    <About />
  </ScrollReveal>

  <ScrollReveal client:load animation="slideUp" delay={0.2}>
    <Contact />
  </ScrollReveal>
</MainLayout>
