---
// src/pages/sobre-mi.astro
import Layout from '../components/layout/Layout.astro';
import About from '../components/react/About';
import { Clock, Users, Coffee, Code, Award, BookOpen } from 'lucide-react';

const stats = [
  {
    icon: Clock,
    value: "5+",
    label: "Años de Experiencia",
  },
  {
    icon: Users,
    value: "50+",
    label: "Clientes Satisfechos",
  },
  {
    icon: Coffee,
    value: "100+",
    label: "Proyectos Completados",
  },
];

const achievements = [
  {
    year: "2023",
    title: "Senior Developer",
    company: "Tech Company",
    description: "Liderazgo de equipo y desarrollo de proyectos innovadores."
  },
  {
    year: "2021",
    title: "Full Stack Developer",
    company: "Start-up Innovation",
    description: "Desarrollo de aplicaciones web y móviles."
  },
  {
    year: "2019",
    title: "Frontend Developer",
    company: "Creative Agency",
    description: "Especialización en interfaces de usuario y experiencia de usuario."
  },
];
---

<Layout title="Sobre Mí | LambdaCodeStudio">
  <!-- Hero Section con Foto -->
  <div class="relative min-h-[50vh] flex items-center justify-center bg-black overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-violet-900/20 to-transparent"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="text-center lg:text-left">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6">
            <span class="bg-clip-text text-transparent bg-gradient-to-r from-violet-500 via-fuchsia-500 to-pink-500">
              Hola, John Wick
            </span>
          </h1>
          <p class="text-xl text-gray-400 mb-8 max-w-2xl mx-auto lg:mx-0">
            Desarrollador Full Stack & Diseñador UI/UX apasionado por crear experiencias digitales únicas y memorables.
          </p>
        </div>
        <div class="relative group">
          <div class="absolute -inset-1 bg-gradient-to-r from-violet-500 to-fuchsia-500 rounded-xl blur-lg opacity-75 group-hover:opacity-100 transition duration-1000"></div>
          <img 
            src="https://picsum.photos/600/400" 
            alt="Profile" 
            class="relative rounded-xl w-full max-w-md mx-auto"
          />
        </div>
      </div>
    </div>
  </div>

  <!-- Estadísticas -->
  <div class="bg-black py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {stats.map(({ icon: Icon, value, label }) => (
          <div class="bg-gray-900/30 backdrop-blur-xl p-6 rounded-xl border border-violet-500/20 text-center group hover:bg-gray-900/50 transition-all duration-300">
            <Icon className="w-10 h-10 text-violet-400 mx-auto mb-4" />
            <div class="text-4xl font-bold text-white mb-2">{value}</div>
            <div class="text-gray-400">{label}</div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- About Component -->
  <About client:load />

  <!-- Timeline de Logros -->
  <div class="bg-black py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-center text-white mb-12">
        Trayectoria Profesional
      </h2>
      
      <div class="relative">
        <div class="absolute left-1/2 transform -translate-x-px h-full w-0.5 bg-gradient-to-b from-violet-500 via-fuchsia-500 to-transparent"></div>
        
        <div class="space-y-12">
          {achievements.map((achievement, index) => (
            <div class="relative group">
              <div class="flex items-center">
                <div class="flex-1 text-right mr-8 md:mr-12">
                  <div class="text-xl font-bold text-white mb-1">{achievement.title}</div>
                  <div class="text-violet-400">{achievement.company}</div>
                  <div class="text-gray-400">{achievement.year}</div>
                </div>
                
                <div class="absolute left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-4 h-4 bg-gradient-to-r from-violet-500 to-fuchsia-500 rounded-full"></div>
                
                <div class="flex-1 ml-8 md:ml-12">
                  <p class="text-gray-400">{achievement.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</Layout>